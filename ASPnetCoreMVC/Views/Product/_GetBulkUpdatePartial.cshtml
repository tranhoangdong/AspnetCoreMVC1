@model ASPnetCoreMVC.Models.BulkUpdateRequestViewModel

<div class="container">
    <h4>Cập nhật thông tin sản phẩm</h4>
    <form id="bulkUpdateForm">
        @for (int i = 0; i < Model.ProductId.Count; i++)
        {
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">ID: @Model.ProductId[i]</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" value="@Model.Names[i]" readonly />
                </div>
                <div class="col-sm-4">
                    <input type="number" name="newPrices[@Model.ProductId[i]]" class="form-control" placeholder="Giá mới" step="0.01" required />
                </div>
                <div class="col-sm-4">
                    <input type="number" name="newStocks[@Model.ProductId[i]]" class="form-control" placeholder="Số tồn kho mới " required />
                </div>
            </div>
        }

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="button" id="btnUpdateBulk" class="btn btn-success">Cập nhật</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </form>
</div>
