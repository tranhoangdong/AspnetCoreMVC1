@model ASPnetCoreMVC.Models.AllProductViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Danh sách sản phẩm</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn-add {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            display: inline-block;
            margin-bottom: 15px;
        }

            .btn-add:hover {
                background-color: #218838;
            }

        .btn-edit {
            background-color: #007bff;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            text-decoration: none;
        }

            .btn-edit:hover {
                background-color: #0056b3;
            }

        .search-bar {
            margin-bottom: 20px;
        }

            .search-bar div {
                margin-bottom: 10px;
            }

            .search-bar label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .search-bar input[type="text"],
            .search-bar select {
                padding: 10px;
                width: 100%;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .search-bar button {
                padding: 10px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

                .search-bar button:hover {
                    background-color: #0056b3;
                }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>

    <form asp-action="GetAllProduct" method="get" class="search-bar">
        <div class="container-fluid">
            <h2>Tìm kiếm </h2>
            <div class="row">
                <div class="col-sm-6">
                    <div>
                        <label for="name">Tìm kiếm theo tên:</label>
                        <input type="text" id="name" name="name" placeholder="Tìm kiếm sản phẩm..." />
                    </div>
                    <div>
                        <label for="priceFilter">Tìm kiếm theo giá:</label>
                        <select id="priceFilter" name="priceFilter">
                            <option value="">-- Chọn điều kiện giá --</option>
                            <option value="above100">Trên 100</option>
                            <option value="below100">Dưới 100</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <select name="categoryId" id="categoryDropdown">
                        <option value="">-- Chọn danh mục --</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <div>
                        <label for="sortColumn">Sắp xếp theo:</label>
                        <select id="sortColumn" name="sortColumn">
                            <option value="">-- Chọn sắp xếp --</option>
                            <option value="price">Giá</option>
                            <option value="stock">Tồn kho</option>
                        </select>
                    </div>
                    <div>
                        <label for="sortOrder">Sắp xếp theo</label>
                        <select id="sortOrder" name="sortOrder">
                            <option value="">-- Chọn sắp xếp --</option>
                            <option value="asc">tăng dần</option>
                            <option value="desc">giảm dần</option>
                        </select>
                    </div>
                   
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
        </div>
    </form>

    <!-- Thêm nút "Thêm sản phẩm" -->

    <a href="javascript:void(0)" id="btnAddProduct" class="btn-add">Thêm sản phẩm</a>
    <!-- fill data listproduct-->
    <div class="container">
        <h2>Danh sách sản phẩm</h2>

        <div id="productTableContainer"></div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Thêm sản phẩm mới</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="modalContent">
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal fade" id="editProductModal" tabindex="-1" role="dialog" aria-labelledby="editProductModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProductModalLabel">Chỉnh sửa sản phẩm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="editModalContent">
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>


        $(document).ready(function () {

            function loadProductTable() {
                var name = $('#name').val();
                var priceFilter = $('#priceFilter').val();
                var sortColumn = $('#sortColumn').val();
                var sortOrder = $('#sortOrder').val();
                var categoryDropdown = $('#categoryDropdown').val();

                $.ajax({
                    url: '@Url.Action("LoadProductTable", "Product")',
                    type: 'GET',
                    data: { 
                        name: name,
                        priceFilter: priceFilter,
                        sortColumn: sortColumn,
                        sortOrder: sortOrder,
                        categoryId: categoryDropdown
                    },
                    success: function (data) {
                        $('#productTableContainer').html(data);
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi tải danh sách sản phẩm.');
                    }
                });
            }

            $('#btnUpdateProduct').on('click', function (e) {
                e.preventDefault();
               // debugger;
                var formData = {
                    Id: $('#ID').val(),
                    Name: $('#Name').val(),
                    Price: $('#Price').val(),
                    Stock: $('#Stock').val(),
                    CategoryId: $('#categoryDropdown').val()
                };
                $.ajax({
                    url: '/Product/EditProduct',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        console.log("Form submitted successfully");
                        loadProductTable();
                    },
                    error: function (xhr, status, error) {
                        console.log("Error occurred while submitting the form");
                    }
                });
            });


            $('#btnAddProduct').on('click', function () {
                $.ajax({
                    url: '@Url.Action("CreateProduct", "Product")',
                    type: 'GET',
                    success: function (data) {
                        console.log("Form đã được tải thành công");
                        $('#modalContent').html(data);
                        $('#addProductModal').modal('show');

                    },
                    error: function () {
                        console.log("Lỗi khi tải form");
                        alert('Có lỗi xảy ra, vui lòng thử lại.');
                    }
                });
            });


            $(document).on('click', '.btn-edit', function () {
                var productId = $(this).data('id');
                console.log("ID sản phẩm chỉnh sửa: " + productId);

                $.ajax({
                    url: '@Url.Action("EditProduct", "Product")?id=' + productId,
                    type: 'GET',
                    success: function (data) {
                        console.log("Form chỉnh sửa đã được tải thành công");
                        $('#editModalContent').html(data);
                        $('#editProductModal').modal('show');
                    },
                    error: function () {
                        console.log("Lỗi khi tải form chỉnh sửa");
                        alert('Có lỗi xảy ra, vui lòng thử lại.');
                    }

                });


            });
            loadProductTable();



            loadProductTable();
            $('form.search-bar').on('submit', function (e) {
                e.preventDefault();
                loadProductTable();
            });

        });
    </script>
</body>
</html>
