@model IEnumerable<ASPnetCoreMVC.Models.ProductViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Danh sách sản phẩm</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn-add {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            display: inline-block;
            margin-bottom: 15px;
        }

            .btn-add:hover {
                background-color: #218838;
            }

        .btn-edit {
            background-color: #007bff;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            text-decoration: none;
        }

            .btn-edit:hover {
                background-color: #0056b3;
            }

        .search-bar {
            margin-bottom: 20px;
        }

            .search-bar div {
                margin-bottom: 10px;
            }

            .search-bar label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .search-bar input[type="text"],
            .search-bar select {
                padding: 10px;
                width: 100%;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .search-bar button {
                padding: 10px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

                .search-bar button:hover {
                    background-color: #0056b3;
                }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <h2>Danh sách sản phẩm</h2>

   

    <!-- Search Form -->
    <form asp-action="GetAllProduct" method="get" class="search-bar">
        <div>
            <label for="name">Tìm kiếm theo tên:</label>
            <input type="text" id="name" name="name" placeholder="Tìm kiếm sản phẩm..." />
        </div>
        <div>
            <label for="priceFilter">Tìm kiếm theo giá:</label>
            <select id="priceFilter" name="priceFilter">
                <option value="">-- Chọn điều kiện giá --</option>
                <option value="above100">Trên 100</option>
                <option value="below100">Dưới 100</option>
            </select>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
    </form>
    <!-- Thêm nút "Thêm sản phẩm" -->
   
    <a href="javascript:void(0)" id="btnAddProduct" class="btn-add">Thêm sản phẩm</a>

    <!-- Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Thêm sản phẩm mới</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="modalContent">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="editProductModal" tabindex="-1" role="dialog" aria-labelledby="editProductModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProductModalLabel">Chỉnh sửa sản phẩm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="editModalContent">
                        <!-- Nội dung form chỉnh sửa sẽ được load ở đây bằng AJAX -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Chỉnh sửa / Xóa</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ID</td>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.Stock</td>
                        <td>
                            <a href="javascript:void(0)" class="btn-edit" onclick="openEditModal(@product.ID)">Chỉnh sửa</a>

                            
                            <form asp-controller="Product" asp-action="DeleteProduct" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@product.ID" />
                                <button type="submit" class="btn-delete" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">Không có sản phẩm nào được tìm thấy.</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#btnAddProduct').on('click', function () {
                $.ajax({
                    url: '@Url.Action("CreateProduct", "Product")',
                    type: 'GET',
                    success: function (data) {
                        console.log("Form đã được tải thành công");
                        $('#modalContent').html(data); 
                        $('#addProductModal').modal('show'); 
                    },
                    error: function () {
                        console.log("Lỗi khi tải form");
                        alert('Có lỗi xảy ra, vui lòng thử lại.');
                    }
                });
            });
        });
                 </script>
        <script>
        $(document).on('click', '.btn-edit', function () {
            var productId = $(this).data('id');
            $.ajax({
                url: '@Url.Action("EditProduct", "Product")?id=' + productId,
                type: 'GET',
                success: function (data) {
                    $('#editModalContent').html(data); 
                    $('#editProductModal').modal('show'); 
                },
                error: function () {
                    alert('Có lỗi xảy ra, vui lòng thử lại.');
                }
            });
        });
        </script>
</body>
</html>
