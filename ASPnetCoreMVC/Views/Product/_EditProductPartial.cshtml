@model ASPnetCoreMVC.Models.AllProductViewModel

    <input type="hidden" asp-for="Product.ID" />

    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Tên sản phẩm:</label>
        <div class="col-sm-10">
            <input type="text" id="Name" name="Name" asp-for="Product.Name" class="form-control" required />
        </div>
    </div>

    <div class="form-group row">
        <label for="Price" class="col-sm-2 col-form-label">Giá:</label>
        <div class="col-sm-10">
            <input type="number" id="Price" name="Price" asp-for="Product.Price" class="form-control" step="0.01" required />
        </div>
    </div>

    <div class="form-group row">
        <label for="Stock" class="col-sm-2 col-form-label">Tồn kho:</label>
        <div class="col-sm-10">
            <input type="number" id="Stock" name="Stock" asp-for="Product.Stock" class="form-control" required />
        </div>
    </div>
<div class="form-group row">
    <label for="categoryDropdown" class="col-sm-2 col-form-label">Danh mục:</label>
    <div class="col-sm-10">
        <select id="categoryDropdown" name="categoryId" asp-for="Product.CategoryId" class="form-control">
            <option value="">-- Chọn danh mục --</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id" >@category.Name</option>
            }
        </select>
    </div>
</div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" id="btnUpdateProduct" class="btn btn-success">Cập nhật</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    </div>
