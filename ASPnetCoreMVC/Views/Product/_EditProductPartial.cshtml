@model ASPnetCoreMVC.Models.ProductViewModel

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="ID" />

    <div>
        <label for="Name">Tên sản phẩm:</label>
        <input type="text" id="Name" name="Name" asp-for="Name" required />
    </div>

    <div>
        <label for="Price">Giá:</label>
        <input type="number" id="Price" name="Price" asp-for="Price" step="0.01" required />
    </div>

    <div>
        <label for="Stock">Tồn kho:</label>
        <input type="number" id="Stock" name="Stock" asp-for="Stock" required />
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
</form>
