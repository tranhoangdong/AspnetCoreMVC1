@model eShopSolution.Web.Models.AllProductViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Danh sách sản phẩm</title>
    <link rel="stylesheet" href="~/css/Index.css" />
   
</head>
<body>

    <form method="get" class="search-category-bar">
        <div class="container-fluid">
            <h2 class=" mb-4">Danh sách hàng hóa</h2>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="categoryDropdown">Loại sản phẩm:</label>
                        <div class="input-group">
                            <select id="categoryDropdown" name="categoryId" class="form-control">
                                <option value="">-- Chọn --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
    </form>

    <!-- fill data listproduct-->
    <div class="container">
        <h2>Danh sách sản phẩm</h2>
        <div id="productTableContainer"></div>
    </div>

    <script>

        $(document).ready(function () {

            function loadProductTable() {
                var categoryDropdown = $('#categoryDropdown').val();

                $.ajax({
                    url: '@Url.Action("LoadProductTable", "Order")',
                    type: 'GET',
                    data: {
                        categoryId: categoryDropdown
                    },
                    success: function (data) {
                        $('#productTableContainer').html(data);
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi tải danh sách sản phẩm.');
                    }
                });
            }

            loadProductTable();
            $('form.search-category-bar').on('submit', function (e) {
                e.preventDefault();
                loadProductTable();
            });
        });
    </script>
</body>
</html>
