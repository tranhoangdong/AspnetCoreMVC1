@model eShopSolution.Web.Models.AllProductViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Danh sách sản phẩm</title>

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn-add {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            display: inline-block;
            margin-bottom: 15px;
        }

            .btn-add:hover {
                background-color: #218838;
            }

        .btn-edit {
            background-color: #007bff;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            text-decoration: none;
        }

            .btn-edit:hover {
                background-color: #0056b3;
            }

        .search-bar {
            margin-bottom: 20px;
        }

            .search-bar div {
                margin-bottom: 10px;
            }

            .search-bar label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .search-bar input[type="text"],
            .search-bar select {
                padding: 10px;
                width: 100%;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .search-bar button {
                padding: 10px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

                .search-bar button:hover {
                    background-color: #0056b3;
                }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        input.form-control, select.form-control {
            line-height: normal;
            padding: 0.375rem 0.75rem;
        }

        input.form-control, select.form-control {
            height: auto;
            min-height: 38px;
        }

        input.form-control, select.form-control {
            font-size: 1rem;
            height: auto;
        }

        #btnAddProduct {
            position: relative;
            left: 14px;
        }

        .form-group-sortColumn {
            position: relative;
            top: 262px;
            width: 180px;
            left: 139px;
        }

        .form-group-sortOder {
            position: relative;
            top: 186px;
            width: 180px;
            left: 341px;
        }

        .btn-bulkupdate {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            display: inline-block;
            margin-bottom: 15px;
        }

        #btnBulkUpdateProduct {
            position: relative;
            left: 14px;
        }

        }

        .btn-delete:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>

    <form asp-action="GetAllProduct" method="get" class="search-bar">
        <div class="container-fluid">
            <h2 class=" mb-4">Danh sách hàng hóa</h2>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="categoryDropdown">Loại sản phẩm:</label>
                        <div class="input-group">
                            <select id="categoryDropdown" name="categoryId" class="form-control">
                                <option value="">-- Chọn --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>

        </div>
    </form>

    <!-- fill data listproduct-->
    <div class="container">
        <h2>Danh sách sản phẩm</h2>
        <div id="productTableContainer"></div>
    </div>

    <script>

        $(document).ready(function () {

            function loadProductTable() {
                var name = $('#name').val();
                var priceFilter = $('#priceFilter').val();
                var sortColumn = $('#sortColumn').val();
                var sortOrder = $('#sortOrder').val();
                var categoryDropdown = $('#categoryDropdown').val();

                $.ajax({
                    url: '@Url.Action("LoadProductTable", "Order")',
                    type: 'GET',
                    data: {
                        name: name,
                        priceFilter: priceFilter,
                        sortColumn: sortColumn,
                        sortOrder: sortOrder,
                        categoryId: categoryDropdown
                    },
                    success: function (data) {
                        $('#productTableContainer').html(data);
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi tải danh sách sản phẩm.');
                    }
                });
            }

            loadProductTable();
            $('form.search-bar').on('submit', function (e) {
                e.preventDefault();
                loadProductTable();
            });
        });
    </script>
</body>
</html>
