@model eShopSolution.Web.Models.AllProductViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/css/Index.css" />

</head>
<body>

    <div class="search-category-bar">
        <div class="container-fluid">
            <div class="row">
                @if (Model.RoomAndTable != null)
                {
                    <h2 class="mb-4 col-sm-10"> Tên bàn: @Model.RoomAndTable.Name</h2>
                }
                <!-- Cart-->
                <div class="d-flex-card col-sm-2 float-end">
                    <button id="view-cart" data-banId ="@Model.RoomAndTable.Id" class="btn btn-outline-dark">
                        <i class="bi-cart-fill me-1"></i>
                        Cart
                        <span id="count-card" class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>
                </div>

            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="categoryDropdown">Loại sản phẩm:</label>
                        <div class="input-group">
                            <select id="categoryDropdown" name="categoryId" class="form-control">
                                <option value="">-- Chọn --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>
            </div>
            <button type="submit" id="submit-Category" class="btn btn-primary">Tìm kiếm</button>

        </div>

    </div>

    <div class="modal fade" id="Card-Modal" tabindex="-1" role="dialog" aria-labelledby="Card-ModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Card-ModalLabel">Bulk Update</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="bulkUpdateProductModalContent">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnUpdateBulk" class="btn btn-success">Cập nhật</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <!-- fill data listproduct-->
    <div class="container">
        <h2>Danh sách sản phẩm</h2>
        <div id="productTableContainer"></div>
    </div>

    <script>

        $(document).ready(function () {

            $(document).on('click', "#view-cart", function (e) {
                let banId = $(this).data('banid');
                window.location.href = '/Cart/Cart?ban=' + banId;
            });


            function addToCart() {
                var cartCountElement = document.getElementById("count-card");
                let currentCount = parseInt(sessionStorage.getItem('cardCount')) || 0;
                currentCount += 1;
                cartCountElement.innerText = currentCount;
                sessionStorage.setItem('cardCount', currentCount);


            }
            $(document).on('click', '#add-card', function (e) {
                addToCart();
            });

            var saveCount = parseInt(sessionStorage.getItem('cardCount')) || 0;
            $("#count-card").text(saveCount);


            function loadProductTable() {
                var categoryDropdown = $('#categoryDropdown').val();

                $.ajax({
                    url: '@Url.Action("LoadProductTable", "Order")',
                    type: 'GET',
                    data: {
                        categoryId: categoryDropdown
                    },
                    success: function (data) {
                        $('#productTableContainer').html(data);
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi tải danh sách sản phẩm.');
                    }
                });
            }

            loadProductTable();

            function updateCartCount() {
                $.ajax({
                    url: '/Cart/GetCartItemCount',
                    type: 'GET',
                    success: function (response) {
                        $("#count-card").text(response.count); 
                    },
                    error: function (xhr, status, error) {
                        console.log("Có lỗi xảy ra khi cập nhật số lượng giỏ hàng: " + error);
                    }
                });
            }

            $(document).on('click', '#add-card', function (e) {
                var productId = $(this).data("id");
                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { productid: productId },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            updateCartCount();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log("Có lỗi xảy ra: " + error);
                    }
                });
            });
            $('#submit-Category').on('click', function (e) {
                e.preventDefault();
                loadProductTable();
            });
        });
    </script>
</body>
</html>
