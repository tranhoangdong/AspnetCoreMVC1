@model List<eShopSolution.Data.Entities.CartItem>

<h2>GIỎ HÀNG</h2>

@if (Model.Count > 0)
{
    decimal total = 0;
    int number = 1;

    <table class="table">
        <tr>
            <th>#</th>
            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
        @foreach (var cartItem in Model)
        {
            var thanhTien = cartItem.quantity * cartItem.product.Price;
            total += thanhTien;
            <tr>
                <td>@(number++)</td>
                <td>@cartItem.product.Name</td>
                <td>@(cartItem.product.Price.ToString("n0"))</td>
                <td><input asp-for="@cartItem.quantity" id="@($"quantity-{cartItem.product.Id}")" /></td>
                <td>@(thanhTien.ToString("n0"))</td>
                <td>
                    <button class="btn btn-success updatecartitem" id="updatecartitemId"
                            data-id="@cartItem.product.Id">
                        Cập nhật
                    </button>
                    <a href="#" class="btn btn-danger remove-cart" data-id="@cartItem.product.Id">Xóa</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="4" class="text-right">Tổng tiền</td>
            <td>@(total.ToString("n0"))</td>
            <td></td>
        </tr>
    </table>
    <a class="btn btn-success" id="GuiDonHang">Gửi đơn hàng</a>



    <script>
            $(document).ready(function () {
                $(document).on('click', "#GuiDonHang", function (event) {
                    event.preventDefault();
                    var urlParams = new URLSearchParams(window.location.search);
                    var banValue = urlParams.get('ban');

                    $.ajax({
                        url: '/Order/SaveOrder',
                        type: 'POST',
                        data: {
                            ban: banValue,
                        },
                        success: function (result) {
                            debugger;

                            if (result.success) {
                                alert(result.message);
                                window.location.href = '/Order/OrderDetails?ban=' + banValue;
                            } else {
                                alert("Lưu đơn hàng thất bại: " + result.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            alert("Đã xảy ra lỗiiiii: " + error);
                        }
                    });
                });



            $(document).on('click', "#updatecartitemId", function (event) {
                event.preventDefault();
                var productid = $(this).data('id');
                var quantity = $("#quantity-" + productid).val();
                $.ajax({
                    url: '/Cart/UpdateCart',
                    type: "POST",
                    data: {
                        productid: productid,
                        quantity:quantity
                    },
                    success: function (result) {
                        window.location.replace(window.location.href);
                    }
                });
            });
            $(document).on('click', '.remove-cart', function (event) {
                event.preventDefault();
                var productid = $(this).data('id');
                var rowToRemove = $(this).closest('tr');

                $.ajax({
                    url: '/Cart/RemoveCart/',
                    type: 'POST',
                    data: {
                        productid: productid,
                    },
                    success: function (result) {
                        if (result.success) {
                            rowToRemove.remove();
                        }
                        alert(result.message);
                    },
                    error: function (xhr, status, error) {
                        alert("Đã xảy ra lỗi: " + error);
                    }
                });
            });


           });

    </script>


}
else
{
    <p class="alert alert-danger">Giỏ hàng trống</p>
}